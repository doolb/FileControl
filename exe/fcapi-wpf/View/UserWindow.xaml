<Window x:Class="fcapi_wpf.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:fcapi_wpf.ViewModel"
        xmlns:p="clr-namespace:fcapi_wpf.Properties"
        xmlns:t="clr-namespace:Tool"
        xmlns:v="clr-namespace:fcapi_wpf.View"
        Title="UserWindow" Height="300" Width="540"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">

    <Window.DataContext>
        <vm:UserWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </Window.Resources>
    <Grid>
        <v:MsgLine x:Name="msg" IsHitTestVisible="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-1,0,60,30"/>

        <Frame Content="{Binding page,Mode=TwoWay}" NavigationUIVisibility="Hidden" Visibility="{Binding !inAdmin,Converter={StaticResource boolToVis}}"/>
        <TextBlock Text="{Binding status}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Firebrick"/>
        <Button Content="" Command="{Binding adminCmd}" Style="{StaticResource IconButton}" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" 
                Visibility="{Binding !inAdmin,Converter={StaticResource boolToVis}}"/>
    </Grid>
</Window>
