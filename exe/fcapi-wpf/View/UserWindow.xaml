<Window x:Class="fcapi_wpf.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:fcapi_wpf.ViewModel"
        xmlns:p="clr-namespace:fcapi_wpf.Properties"
        Title="UserWindow" Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">

    <Window.DataContext>
        <vm:UserWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </Window.Resources>
    <Grid>
        <Frame Content="{Binding page,Mode=TwoWay}" NavigationUIVisibility="Hidden"/>
        <TextBlock Text="{x:Static p:Resources.no_user}" Visibility="{Binding nouser,Converter={StaticResource boolToVis}}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
