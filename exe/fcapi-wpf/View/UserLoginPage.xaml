<Page x:Class="fcapi_wpf.View.UserLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:fcapi_wpf.Properties"
      xmlns:t="clr-namespace:Tool"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="UserLoginPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Style="{StaticResource IconButton}" Content="" Command="{Binding showUserCmd}" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"/>


        <Image Source="{Binding img}" Width="150" Height="150" DockPanel.Dock="Left" Grid.Column="0" Margin="10,0,0,0"/>

        <DockPanel Grid.Column="1" VerticalAlignment="Center" t:MarginSetter.Margin="15">
            <TextBlock Text="{Binding name}" Grid.Row="0" DockPanel.Dock="Top"/>

            <PasswordBox DockPanel.Dock="Top" x:Name="_passwd"/>

            <Button Content="{x:Static p:Resources.login}" Command="{Binding loginCmd}" CommandParameter="{Binding ElementName=_passwd,Path=Password}" DockPanel.Dock="Bottom"/>

        </DockPanel>

    </Grid>
</Page>
